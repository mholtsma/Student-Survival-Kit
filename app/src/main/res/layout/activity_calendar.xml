<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp"
    tools:context="hackucsc.darling_christner_holtsman.studentsurvivalkit.Calendar">

    <CalendarView
        style="@android:style/Widget.CalendarView"
        android:selectedDateVerticalBar="@color/chalk"
        android:selectedWeekBackgroundColor="@color/colorPrimaryDark"
        android:showWeekNumber="false"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/calendarView"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:layout_below="@+id/calendarView"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/test"
        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/test"
                android:text="Medium Text"
                android:id="@+id/test2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:layout_below="@+id/test2"
                android:id="@+id/test3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="50dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test3"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/test4"
                />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
